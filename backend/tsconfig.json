{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
